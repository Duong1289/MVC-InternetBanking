@model System.Collections.Generic.List<InternetBanking.Models.Transaction>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutUser";
}

<h2>Transaction Statements</h2>
<div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
        <a asp-controller="Statement" asp-action="ExportToXml">
            <button class="btn btn-primary">export statement</button>
        </a>
    </div>
</div>

<p>All Transaction</p>

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Sender Account</th>
            <th>Receiver Account</th>
            <th>Amount</th>
            <th>Content</th>
            <th>Transaction Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Id</td>
                <td>@transaction.SenderAccountNumber</td>
                <td>@transaction.ReceiverAccountNumber</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Content</td>
                <td>@transaction.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>

