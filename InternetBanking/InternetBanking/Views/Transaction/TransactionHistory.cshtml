@model IEnumerable<InternetBanking.Models.Transaction>

@{
    ViewData["Title"] = "Transaction History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Transaction/History.css" />
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Transaction History</h1>
    <hr />
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <div class="navbar-wrapper">
                <ul class="navbar-nav">
                    <li class="nav-item transaction" id="transaction">
                        <a class="nav-link" asp-action="Index" style="font-size: 18px; color: white; font-weight: bold;">Transaction</a>
                    </li>
                    <li class="nav-item transaction" id="history">
                        <a class="nav-link" asp-action="TransactionHistory" style="font-size: 18px; color: white; font-weight: bold;">View Transaction History</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <hr />
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Sender Account</th>
                        <th>Receiver Account</th>
                        <th>Amount</th>
                        <th>Transaction Details</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SenderAccountNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReceiverAccountNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Content)</td>
                            <td>@Html.DisplayFor(modelItem => item.TransactionDate.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                            <td>@Html.DisplayFor(modelItem => item.Status ? "Success" : "Failed")</td>   
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">You don't have any transaction history.</p>
    }
</div>
