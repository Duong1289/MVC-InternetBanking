@model InternetBanking.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<hr />
<div class="row justify-content-center">
    <div class="col-6">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Account Details</h6>
                </div>
            </div>
            <div class="card-body px-4 pb-2">
                <form asp-action="Details" class="multisteps-form__form">
                    <div class="multisteps-form__panel border-radius-xl bg-white js-active" data-animation="FadeIn">
                        <h5 class="font-weight-bolder mb-0">Account Details</h5>
                        <p class="mb-0 text-sm">Account Information</p>
                        <div class="multisteps-form__content mt-3">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Balance" class="form-label">Balance</label>
                                        <input asp-for="Balance" class="multisteps-form__input form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="OpenDate" class="form-label">Open Date</label>
                                        <input asp-for="OpenDate" class="multisteps-form__input form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ExpireDate" class="form-label">Expire Date</label>
                                        <input asp-for="ExpireDate" class="multisteps-form__input form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="Status" disabled /> @Html.DisplayNameFor(model => model.Status)
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Customer" class="form-label">Customer</label>
                                        <input asp-for="Customer.Id" class="multisteps-form__input form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="AccountType" class="form-label">Account Type</label>
                                        <input asp-for="AccountType.TypeName" class="multisteps-form__input form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <div class="form-group text-center">
                                        <a asp-action="Edit" asp-route-id="@Model.AccountNumber" class="btn btn-primary">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
