@model InternetBanking.Models.Account

@{
    ViewData["Title"] = "EmployeeDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center mb-4">Employee Detail</h1>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Account Details</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Account Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AccountNumber)</dd>

                        <dt class="col-sm-4">Account Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AccountType.TypeName)</dd>

                        <dt class="col-sm-4">Customer ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Id)</dd>

                        <dt class="col-sm-4">Customer Name</dt>
                        <dd class="col-sm-8">@Model.Customer.FirstName @Model.Customer.LastName</dd>

                        <dt class="col-sm-4">Open Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OpenDate)</dd>

                        <dt class="col-sm-4">Expire Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpireDate)</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="EmployeeIndex" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
