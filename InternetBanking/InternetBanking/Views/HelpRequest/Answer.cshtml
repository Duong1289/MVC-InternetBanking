@model InternetBanking.Models.HelpRequest

@{
    ViewData["Title"] = "Answer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="card h-100 mb-4">
        <div class="card-body pt-4 p-3">
            <h4>Help Request</h4>
            <hr />
            <div class="row d-flex align-items-center justify-content-center" style="text-align:center">
                <div class="col-md-6">
                    <form asp-action="AnswerRequest" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="AccountId" class="form-label">Account Number</label>
                            <div class="input-group input-group-outline my-3">
                                <input asp-for="AccountId" class="form-control" readonly />
                                <span asp-validation-for="AccountId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CustomerId" class="form-label">Customer ID</label>
                            <label class="form-label">Customer Name</label>
                            <div class="input-group input-group-outline my-3">
                                <input asp-for="CustomerId" class="form-control" readonly />
                                <input type="text" class="form-control" value="@ViewBag.Name" readonly />
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="RequestTypeId" class="form-label">Request Type</label>
                            <div class="input-group input-group-outline my-3">
                                <input asp-for="RequestTypeId" type="hidden" />
                                <input type="text" class="form-control" value="@ViewBag.Type" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Content" class="form-label">Content</label>
                            <div class="input-group input-group-outline my-3">
                                <textarea asp-for="Content" class="form-control" required></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                                <div class="invalid-feedback">Please provide content for the request.</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Answer" class="form-label">Answer</label>
                            <div class="input-group input-group-outline my-3">
                                <textarea asp-for="Answer" class="form-control" required></textarea>
                                <span asp-validation-for="Answer" class="text-danger"></span>
                                <div class="invalid-feedback">Please provide an answer.</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

