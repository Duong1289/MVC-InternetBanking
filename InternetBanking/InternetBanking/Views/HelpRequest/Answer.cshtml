    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Answer</h1>

<h4>HelpRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AnswerRequest" method="post">
