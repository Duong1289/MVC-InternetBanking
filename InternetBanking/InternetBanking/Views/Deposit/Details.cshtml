@model InternetBanking.Models.Deposit

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center mb-4">Deposit Details</h1>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Deposit</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Content</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Content)</dd>

                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                        <dt class="col-sm-4">Account Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DepositAccountNumber)</dd>

                        <dt class="col-sm-4">Issue Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IssueDate)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="UserHistory" class="btn btn-primary">Back to History</a>
            </div>
        </div>
    </div>
</div>
