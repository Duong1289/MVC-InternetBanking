@model IEnumerable<InternetBanking.Models.HelpRequestType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RequestTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RequestTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RequestTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
