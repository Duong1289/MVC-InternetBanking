@model InternetBanking.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Edit Employee</h6>
                </div>
            </div>
            <div class="card-body px-2 pb-2">
                <form asp-action="Edit" class="multisteps-form__form" style="height: 350px;">
                    <div class="multisteps-form__panel border-radius-xl bg-white js-active" data-animation="FadeIn">
                        <h5 class="font-weight-bolder mb-0">Edit Employee</h5>
                        <p class="mb-0 text-sm">Employee Information</p>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="multisteps-form__content">
                            <div class="row mt-3">
                                <div class="col-12 col-sm-6">
                                    <div class="input-group input-group-dynamic is-filled ">
                                        <label class="form-label">Personal ID</label>
                                        <input asp-for="PersonalId" class="multisteps-form__input form-control" type="text" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="PersonalId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                    <div class="input-group input-group-dynamic is-filled">
                                        <label class="form-label">Email</label>
                                        <input asp-for="Email" class="multisteps-form__input form-control" type="email" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12 col-sm-6">
                                    <div class="input-group input-group-dynamic is-filled">
                                        <label class="form-label">First Name</label>
                                        <input asp-for="FirstName" class="multisteps-form__input form-control" type="text" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                    <div class="input-group input-group-dynamic is-filled">
                                        <label class="form-label">Last Name</label>
                                        <input asp-for="LastName" class="multisteps-form__input form-control" type="text" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12 col-sm-6">
                                    <div class="input-group input-group-dynamic is-filled">
                                        <label class="form-label">Address</label>
                                        <input asp-for="Address" class="multisteps-form__input form-control" type="text" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                    <div class="input-group input-group-dynamic is-filled">
                                        <label class="form-label">Phone</label>
                                        <input asp-for="Phone" class="multisteps-form__input form-control" type="text" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <hr />
                            <div class="form-group text-center">
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function focused(element) {
        element.parentElement.classList.add("input-group-dynamic-focused");
    }

    function defocused(element) {
        if (element.value === "") {
            element.parentElement.classList.remove("input-group-dynamic-focused");
        }
    }
</script>
