@model IEnumerable<InternetBanking.Models.Account>

@{
    ViewData["Title"] = "Account List";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


@if (User.IsInRole("Customer"))
{
    <h1>Your Bank Accounts</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Account</a>
    </p>
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var account in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Account Number: @account.AccountNumber</h5>
                            <p class="card-text">Balance: @Html.DisplayFor(modelItem => account.Balance)</p>
                            <a asp-action="Details" asp-route-id="@account.AccountNumber" class="btn btn-info">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p>You don't have any accounts yet.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">Click here to create an account</a>
        </div>
    }

}
else
{
    <h1>Account List</h1>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OpenDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpenDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>

                        <td>

                            <a asp-action="Details" asp-route-id="">Details</a> |

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}